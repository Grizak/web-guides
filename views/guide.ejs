<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guide.title %></title>
    <link rel="stylesheet" href="/css/guide.css">
</head>
<body>
    <h1><%= guide.title %></h1>
    <h3>By: <%= guide.author %>, <%= new Date(<%= guide.createdAt).toLocateString() %></h3>
    <ul>
        <% guide.sections.forEach((section, index) => { %>
          <li><a href="#section-<%= index %>"><%= section.title %></a></li>
        <% }) %>
      </ul>
      <% guide.sections.forEach((section, index) => { %>
        <h2 id="section-<%= index %>"><%= section.title %></h2>
        <%- section.content %>
      <% }) %>
      
    <a href="/" class="btn">Return back</a>
    <% if(admin) { %>
        <a href="/admin/edit/<%= guide._id %>" class="btn">Go to Edit this Guide</a>
    <% } %>
</body>
</html>
